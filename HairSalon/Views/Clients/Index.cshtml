
@{
  Layout = "_Layout";
}

@using HairSalon.Models;
@model List<HairSalon.Models.Client>;

    <h1>Restaurants</h1>

    @if (@Model.Count == 0)
    {
        <h3>No Clients have been added yet</h3>
    }

    <ul>@foreach(Client client in Model)
        {
             <li class="btn btn-info">@Html.ActionLink($"{client.Name}", "Details", new { id = client.ClientId}) | @client.Stylist.Name</li>
        }
    </ul>

<p> @Html.ActionLink("Add new Client", "Create")</p>
<p>@Html.ActionLink("Home", "Index", "Home")</p>
